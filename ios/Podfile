platform :ios, '14.0'

# 1. Safely find the Flutter root without crashing
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)

  # If the file doesn't exist yet, return a dummy path or wait
  unless File.exist?(generated_xcode_build_settings_path)
    return File.expand_path(File.join('..', '..', 'flutter'), __FILE__)
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT=(.*)/)
    return matches[1].strip if matches
  end
end

# 2. Only require the podhelper if it actually exists
podhelper_path = File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)
if File.exist?(podhelper_path)
  require podhelper_path
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # 3. Only run the install if the helper was loaded
  if respond_to?(:flutter_install_all_ios_pods)
    flutter_install_all_ios_pods File.dirname(File.expand_path(__FILE__))
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Safely run additional settings
    flutter_additional_ios_build_settings(target) if respond_to?(:flutter_additional_ios_build_settings)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end